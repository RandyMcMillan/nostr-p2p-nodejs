{
  "name": "@cmdcode/nostr-p2p",
  "version": "0.0.1",
  "description": "Basic peer-to-peer messaging, transmitted over relays.",
  "author": "Christopher Scott",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/cmdruid/nostr-p2p"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  },
  "files": [
    "README.md",
    "LICENSE",
    "dist",
    "src"
  ],
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./lib": {
      "import": "./dist/lib/index.js",
      "types": "./dist/lib/index.d.ts",
      "default": "./dist/lib/index.js"
    }
  },
  "scripts": {
    "build": "./script/build.sh",
    "load": "tsx --tsconfig ./test/tsconfig.json",
    "scratch": "yarn load test/scratch.ts"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.1",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.3.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.1",
    "rollup": "^4.24.0",
    "tslib": "^2.8.0",
    "tsx": "^4.19.1",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "@cmdcode/buff": "^2.2.5",
    "@noble/ciphers": "^1.0.0",
    "@noble/curves": "^1.6.0",
    "@nostr-dev-kit/ndk": "^2.10.5",
    "zod": "^3.23.8"
  }
